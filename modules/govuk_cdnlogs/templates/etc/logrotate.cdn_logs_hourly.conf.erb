<%
to_rotate_hourly = @service_port_map.keys
unless to_rotate_hourly.empty?
%>
<%=
to_rotate_hourly.map { |name| "#{ @log_dir }/cdn-#{ name }.log" }.join("\n")
-%>

{
  su root deploy
  rotate 3
  dateext
  dateformat -%Y%m%d-%s
  compress
  size 1
  missingok
  postrotate
    invoke-rc.d rsyslog reload >/dev/null 2>&1 || true
    sleep 10
  endscript
}
<% end %>
